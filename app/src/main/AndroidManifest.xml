<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.medium.binding">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:name="com.medium.binding.config.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 스플래시 화면 -->
        <activity android:name="com.medium.binding.src.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 화면-->
        <activity android:name="com.medium.binding.src.login.LoginActivity"
            android:screenOrientation="portrait"/>

        <!-- 회원가입 화면-->
        <activity android:name="com.medium.binding.src.join.JoinActivity"
            android:screenOrientation="portrait"/>

        <!-- 비밀번호 찾기 화면-->
        <activity android:name="com.medium.binding.src.find_password.FindPasswordActivity"
            android:screenOrientation="portrait"/>

        <!-- 메인 화면 -->
        <activity android:name="com.medium.binding.src.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <!-- 책방 화면 -->
        <activity android:name="com.medium.binding.src.main.home.room.HomeRoomActivity"
            android:screenOrientation="portrait"/>

        <!-- 마이페이지 세팅 - 프로필 관리 화면-->
        <activity android:name="com.medium.binding.src.main.my_page.settings.profile.SettingsProfileActivity"
            android:screenOrientation="portrait"/>

        <!-- 마이페이지 세팅 - 비밀번호 변경 화면-->
        <activity android:name="com.medium.binding.src.main.my_page.settings.password.ChangePWActivity"
            android:screenOrientation="portrait"/>

        <!-- 마이페이지 세팅 - 서점 제보 화면-->
        <activity android:name="com.medium.binding.src.main.my_page.settings.report.SettingsReportActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>